<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="header_text">
        <item name="android:fontFamily">@font/vidaloka</item>
        <item name="android:textColor">#FFe9d6e9</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>

    </style>


    <style name="sub_text">
        <item name="android:fontFamily">@font/vidaloka</item>
        <item name="android:textColor">#FFe9d6e9</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="card_item">
        <item name="android:background">@color/card_color</item>
    </style>

    <style name="card_style">
        <item name="android:layout_width">115dp</item>
        <item name="android:layout_height">115dp</item>
        <item name="android:background">@drawable/custom_card_shadow</item>
        <item name="cardBackgroundColor">@color/card_color</item>
        <item name="cardCornerRadius">17dp</item>
        <item name="cardElevation">80dp</item>
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">@color/white</item>
        <item name="android:outlineAmbientShadowColor" tools:targetApi="p">@color/white</item>
    </style>

    <style name="card_shadow_style">
        <item name="android:layout_width">117dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:background">@drawable/custom_card_shadow</item>
        <item name="cardBackgroundColor">@color/card_color</item>
        <item name="cardCornerRadius">17dp</item>
        <item name="cardElevation">5dp</item>
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">@color/white</item>
        <item name="android:outlineAmbientShadowColor" tools:targetApi="p">@color/white</item>
    </style>
</resources>