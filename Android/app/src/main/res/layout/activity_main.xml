<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="32dp"
    android:background="@color/color_primary"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/updateCard"
        style="@style/card_button"
        android:layout_width="195dp"
        android:layout_height="42dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toStartOf="@+id/deezerCard"
        app:layout_constraintStart_toEndOf="@+id/ytMusicCard"
        app:layout_constraintTop_toBottomOf="@+id/ytMusicCard">

        <Button
            android:id="@+id/updateBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:contentDescription="@string/update_choice"
            android:text="@string/update_choice"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:ignore="TouchTargetSizeCheck" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/deezerCard"
        style="@style/card_style"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ytMusicCard"
        app:layout_constraintTop_toTopOf="@+id/ytMusicCard">

        <ImageButton
            android:id="@+id/deezerBtn"
            style="@style/card_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/deezer_Btn"
            android:padding="@dimen/card_size"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:scaleX="-.8"
            android:scaleY="-.8"
            android:visibility="visible"
            app:srcCompat="@drawable/deezer_white"
            tools:ignore="SpeakableTextPresentCheck" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/ytMusicCard"
        style="@style/card_style"
        android:layout_marginStart="50dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toStartOf="@+id/deezerCard"
        app:layout_constraintHorizontal_bias="0.94"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spotifyCard">

        <ImageButton
            android:id="@+id/ytMusicBtn"
            style="@style/card_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/ytMusic_Btn"
            android:padding="@dimen/card_size"
            android:scaleType="centerInside"
            android:scaleX="-0.7"
            android:scaleY="0.7"
            android:visibility="visible"
            app:srcCompat="@drawable/yt_music_white"
            tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/appleMusicCard"
        style="@style/card_style"
        android:layout_marginStart="48dp"
        app:layout_constraintEnd_toStartOf="@+id/spotifyCard"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/spotifyCard">

        <ImageButton
            android:id="@+id/appleMusicBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:contentDescription="@string/appleMusic_Btn"
            android:scaleType="centerInside"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:visibility="visible"
            app:srcCompat="@drawable/apple_music_white" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/spotifyCard"
        style="@style/card_style"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toStartOf="@+id/anghamiCard"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/appleMusicCard"
        app:layout_constraintTop_toBottomOf="@+id/chooseText">

        <ImageButton
            android:id="@+id/spotifyBtn"
            style="@style/card_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/spotify_Btn"
            android:padding="@dimen/card_size"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            android:scaleX="-0.7"
            android:scaleY="-0.7"
            android:visibility="visible"
            app:srcCompat="@drawable/spotify_white"
            tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck,DuplicateSpeakableTextCheck" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/anghamiCard"
        style="@style/card_style"
        android:layout_marginEnd="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/spotifyCard"
        app:layout_constraintTop_toTopOf="@+id/spotifyCard">

        <ImageButton
            android:id="@+id/anghamiBtn"
            style="@style/card_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/anghami_Btn"
            android:padding="@dimen/card_size"
            android:scaleType="centerInside"
            android:cropToPadding="true"
            android:paddingBottom="15dp"
            android:scaleX="-0.8"
            android:scaleY="0.8"
            android:background="@android:color/transparent"
            android:visibility="visible"
            app:srcCompat="@drawable/anghami_white"
            tools:ignore="SpeakableTextPresentCheck,DuplicateSpeakableTextCheck" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/chooseText"
        style="@style/sub_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="54dp"
        android:fontFamily="@font/alike_angular"
        android:text="@string/your_music_provider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeMessage" />

    <TextView
        android:id="@+id/welcomeMessage"
        style="@style/header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/alike_angular"
        android:text="@string/Welcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

